    <RelativeLayout android:id="@+id/logoLay"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="center"
            android:src="@drawable/bannerimg"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/logoLay"
        android:background="@color/transparent"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"

            android:layout_marginTop="@dimen/margin_50"
            android:layout_marginBottom="@dimen/margin_16"
            android:orientation="vertical">

            <TextView android:id="@+id/emailTv"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Enter your email address"
                android:textColor="@color/themecolor"
                android:layout_marginTop="@dimen/margin_20"
                />
            <EditText
                android:id="@+id/emailET"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_40"
                android:layout_marginRight="@dimen/margin_20"
                android:layout_marginLeft="@dimen/margin_20"
                android:padding="@dimen/margin_8"
                android:inputType="textEmailAddress"
                android:layout_marginTop="@dimen/margin_20"
                android:textSize="@dimen/font_16"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:textColor="@color/darker_gray"
                android:focusable="true"
                android:hint="@string/email"
                android:background="@drawable/edittext_white_bg_gray_corner"
                />


            <Button
                android:id="@+id/signInButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_35"
                android:layout_marginTop="@dimen/margin_50"
                android:layout_marginRight="@dimen/margin_20"
                android:layout_marginLeft="@dimen/margin_20"
                android:padding="@dimen/margin_5"
                android:textSize="@dimen/font_16"
                android:textColor="@color/white"
                android:text="@string/sign_in"
                android:background="@color/text_color_main"
                />

        </LinearLayout>
        <RelativeLayout android:id="@+id/layy"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/margin_30dp"
            android:layout_marginRight="@dimen/margin_30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/lay3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/lay2"
                android:layout_marginTop="@dimen/margin_20dp"
                android:background="@drawable/rounded_shape_orng_border"
                android:padding="@dimen/margin_8dp">

                <TextView
                    android:id="@+id/bUSer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text=" Login "
                    android:textColor="@color/white"

                    android:textSize="@dimen/margin_20dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lay4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/lay3"
                android:layout_marginTop="@dimen/margin_20dp"
                android:background="@drawable/rounded_shape_green_border"
                android:padding="@dimen/margin_8dp">

                <TextView
                    android:id="@+id/registration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text=" Sign Up "
                    android:textColor="@color/white"

                    android:textSize="@dimen/margin_20dp" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/lay5"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/lay4"
                android:layout_marginTop="@dimen/margin_20dp"
                android:background="@drawable/rounded_shape_yello_button"
                android:padding="@dimen/margin_8dp">

                <TextView android:id="@+id/skipLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SKIP"
                    android:layout_centerVertical="true"

                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/margin_16"/>

            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
